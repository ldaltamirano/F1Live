---
import Card from '../ui/Card.astro';
import Badge from '../ui/Badge.astro';
import Button from '../ui/Button.astro';

interface Props {
  news: {
    id: string;
    titulo: string;
    bajada: string;
    imagen: string;
    fecha: string;
    tags: string[];
    fuente?: string;
    autor?: string;
    tipo?: string;
  };
  featured?: boolean;
}

const { news, featured = false } = Astro.props;

const date = new Date(news.fecha).toLocaleDateString('es-ES', {
  day: 'numeric',
  month: 'long',
  year: 'numeric'
});
---

<Card class={`h-full flex flex-col group ${featured ? 'md:flex-row' : ''}`} noPadding>
  <!-- Línea de acento lateral (Magenta) -->
  <div class="absolute left-0 top-0 bottom-0 w-1 bg-secondary z-10 opacity-70 group-hover:opacity-100"></div>

  <div class={`relative overflow-hidden ${featured ? 'md:w-2/3 h-64 md:h-auto' : 'h-48'}`}>
    <img 
      src={news.imagen} 
      alt={news.titulo} 
      class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 hover:scale-110"
      loading="lazy"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-surface via-transparent to-transparent opacity-60"></div>
  </div>

  <div class="p-6 flex flex-col flex-grow gap-4">
    <div class="flex flex-wrap gap-2">
      {news.tags && news.tags.slice(0, 3).map((tag) => (
        <Badge variant="gradient" class="text-xs shadow-sm">{tag}</Badge>
      ))}
    </div>

    <div class="flex-grow">
      <div class="flex items-center justify-between mb-2 text-xs text-text-muted font-mono uppercase tracking-wide">
        <span class="text-secondary transition-colors duration-300">{date}</span>
        {news.fuente && <span class="text-accent font-bold">{news.fuente}</span>}
      </div>

      <h3 class={`font-bold text-text mb-2 leading-tight ${featured ? 'text-2xl md:text-3xl' : 'text-xl'}`}>
        <a href={`/noticias/${news.id}`}>
          {news.titulo}
        </a>
      </h3>
      <p class="text-text-muted text-sm line-clamp-3">
        {news.bajada}
      </p>
    </div>

    <div class="flex items-center justify-between mt-auto pt-4 border-t border-white/5">
      {news.autor && (
        <div class="flex items-center gap-2 text-xs text-text-muted">
            <div class="w-6 h-6 rounded-[10px] bg-surface-hover flex items-center justify-center text-[10px] font-bold text-text uppercase">
                {news.autor.charAt(0)}
            </div>
            <span>{news.autor}</span>
        </div>
      )}
      <Button href={`/noticias/${news.id}`} variant="racing" size="sm" >
        Leer más &rarr;
      </Button>
    </div>
  </div>
</Card>