---
import Badge from '@components/ui/Badge.astro';

interface Props {
  team: {
    id: number;
    nombre: string;
    nombreCompleto: string | null;
    base: string | null;
    jefe: string | null;
    colorVar: string | null;
    logo: string | null;
    imagenCoche: string | null;
    drivers: {
        nombre: string;
        apellido: string;
    }[];
  };
}

const { team } = Astro.props;
---

<div 
  class="group relative bg-surface backdrop-blur-sm rounded-2xl overflow-hidden border border-white/10 hover:border-[var(--team-color)] hover:shadow-[0_0_30px_-10px_var(--team-color)] hover:-translate-y-2 transition-all duration-500 shadow-lg"
  style={`--team-color: ${team.colorVar}; border-top: 4px solid var(--team-color)`}
>
  {/* Efecto de brillo con el color del equipo */}
  <div 
    class="absolute inset-0 bg-[var(--team-color)] opacity-0 transition-opacity duration-500 pointer-events-none"
  ></div>

  <div class="p-6 relative z-10">
    <div class="flex justify-between items-start mb-4">
      <div class="bg-white/90 p-3 rounded-xl backdrop-blur-sm shadow-sm">
        <img src={team.logo} alt={`Logo ${team.nombre}`} class="h-10 w-auto object-contain max-w-[100px]" />
      </div>
      <span class="text-xs font-mono text-white uppercase">{team.base}</span>
    </div>

    <h2 class="text-3xl font-black text-white italic uppercase tracking-tighter mb-1">{team.nombre}</h2>
    <p class="text-xs text-gray-400 mb-6 font-medium line-clamp-1">{team.nombreCompleto}</p>

    <div class="flex gap-2 mb-8">
      {
        team.drivers && team.drivers.map((driver) => (
          <Badge variant="ghost">{driver.nombre}  {driver.apellido}</Badge>
        ))
      }
    </div>

    <div class="relative h-36 w-full mt-auto group-hover:scale-105 transition-transform duration-500">
      <img src={team.imagenCoche} alt={`Coche ${team.nombre}`} class="w-full h-full object-contain drop-shadow-2xl" />
    </div>
  </div>
</div>
