---
interface Props {
  variant?: 'primary' | 'secondary' | 'ghost' | 'outline' | 'racing';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  class?: string;
  [key: string]: any;
}

const { variant = 'primary', size = 'md', href, class: className, ...rest } = Astro.props;

const variants = {
  primary: 'bg-white text-black hover:bg-gray-200 border-transparent',
  secondary: 'bg-surface text-text border-white/10 hover:bg-surface-hover',
  ghost: 'bg--white/10 text-white hover:bg-white/20 border-transparent',
  outline: 'bg-transparent border border-white/20 text-text hover:border-white/40',
  // Nueva variante "racing" con los colores de la clase
  racing: 'text-text-muted hover:text-white hover:bg-gradient-to-r hover:from-primary hover:to-secondary hover:border-transparent transition-all duration-300 ml-auto',
};

const sizes = {
  sm: 'px-3 py-1.5 text-xs',
  md: 'px-5 py-2.5 text-sm',
  lg: 'px-8 py-4 text-base',
};

const Tag = href ? 'a' : 'button';
---

<Tag
  href={href}
  class:list={[
    "my-5 inline-flex items-center justify-center rounded-[5px] font-bold uppercase tracking-widest transition-all duration-300 disabled:opacity-50 disabled:pointer-events-none cursor-pointer",
    variants[variant] || variants.primary,
    sizes[size],
    className
  ]}
  {...rest}
>
  <slot />
</Tag>