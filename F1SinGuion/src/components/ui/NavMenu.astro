---
interface Props {
  items: { name: string; href: string }[];
}

const { items } = Astro.props;
---

<div class="flex flex-col lg:flex-row lg:min-h-[400px]">
  <!-- Left Side: Navigation List (25%) -->
  <div class="w-full lg:w-1/4 px-4 py-4 space-y-2 lg:border-r border-white/10">
    {items.map((item) => (
      <div class="group lg:static relative">
        <div class="flex items-center justify-between">
          <a 
            href={item.href} 
            class="text-text-muted hover:text-accent hover:drop-shadow-[0_0_5px_rgba(6,182,212,0.8)] hover:bg-white/5 block px-3 py-2 rounded-md text-base font-bold uppercase tracking-widest transition-all w-full group-hover:text-white group-hover:bg-white/10"
          >
            {item.name}
          </a>
          <!-- Arrow indicator -->
          <svg class="h-4 w-4 text-text-muted opacity-0 group-hover:opacity-100 transition-opacity hidden lg:block" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
        </div>
        
        <!-- Right Side: Content Area (75%) -->
        <div class="hidden lg:group-hover:block lg:absolute lg:top-0 lg:left-[25%] lg:w-[75%] lg:h-full bg-surface/50 backdrop-blur-sm p-8 z-50">
          <h3 class="text-3xl font-black text-white mb-4 italic uppercase tracking-tighter">{item.name}</h3>
          <p class="text-lg text-text-muted">Mensaje por el momento para {item.name}</p>
        </div>
      </div>
    ))}
  </div>
  
  <!-- Placeholder for right side when no hover (Desktop only) -->
  <div class="hidden lg:block lg:w-3/4 bg-surface/30"></div>
</div>