---
interface Props {
  variant?: 'default' | 'outline' | 'accent' | 'success' | 'warning' | 'danger' | 'neon' | 'primary' | 'secondary';
  class?: string;
}

const { variant = 'default', class: className } = Astro.props;

const variants = {
  default: 'bg-surface text-text-muted border-white/10',
  outline: 'bg-transparent border-white/20 text-text',
  accent: 'bg-accent/10 text-accent border-accent/20',
  success: 'bg-success/10 text-success border-success/20',
  warning: 'bg-warning/10 text-warning border-warning/20',
  danger: 'bg-danger/10 text-danger border-danger/20',
  neon: 'bg-neon/10 text-neon border-neon/20 shadow-[0_0_8px_rgba(204,255,0,0.3)]',
  primary: 'bg-primary/10 text-primary border-primary/20',
  secondary: 'bg-secondary/10 text-secondary border-secondary/20',
};
---

<span class:list={[
  "inline-flex items-center px-2.5 py-0.5 rounded-[10px] text-xs font-bold uppercase tracking-wider border",
  variants[variant] || variants.default,
  className
]}>
  <slot />
</span>
