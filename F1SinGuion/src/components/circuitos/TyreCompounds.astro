---
interface Props {
  compounds: string[];
}

const { compounds } = Astro.props;
---

<div class="bg-surface rounded-2xl p-6 border border-white/10">
  <h3 class="text-xl font-bold text-text mb-6 flex items-center gap-2 uppercase italic">
    <span class="text-accent">Tyre</span> Allocation
  </h3>
  
  <div class="flex justify-center gap-6">
    {compounds.slice(0, 3).map((c, i) => (
      <div class="group flex flex-col items-center gap-3">
        <div class={`relative w-14 h-14 rounded-full flex items-center justify-center text-lg font-black border-[6px] shadow-xl transition-transform duration-300 group-hover:scale-110 ${
          i === 0 ? 'border-white text-white bg-[#1a1a1a]' : 
          i === 1 ? 'border-[#ffd700] text-[#ffd700] bg-[#1a1a1a]' : 
          'border-[#e10600] text-[#e10600] bg-[#1a1a1a]'
        }`}>
          {/* Tyre Shine Effect */}
          <div class="absolute inset-0 rounded-full border border-white/10"></div>
          <div class="absolute top-1 right-2 w-3 h-1.5 bg-white/20 rounded-full -rotate-45 blur-[1px]"></div>
          {c}
        </div>
        <span class="text-[10px] text-text-muted uppercase font-bold">{i === 0 ? 'Hard' : i === 1 ? 'Medium' : 'Soft'}</span>
      </div>
    ))}
  </div>
</div>