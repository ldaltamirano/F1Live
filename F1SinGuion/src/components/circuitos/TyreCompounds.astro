---
interface Props {
  compounds: string[];
}

const { compounds } = Astro.props;
---

<div class="bg-surface rounded-2xl p-6 border border-white/10">
  <h3 class="text-xl font-bold text-text mb-6 flex items-center gap-2 uppercase italic">
    <span class="text-accent">Tyre</span> Allocation
  </h3>
  
  <div class="flex justify-center gap-4">
    {compounds.slice(0, 3).map((c, i) => (
      <div class="flex flex-col items-center gap-2">
        <div class={`w-12 h-12 rounded-[10px] flex items-center justify-center text-sm font-black border-4 shadow-lg ${
          i === 0 ? 'border-white text-white bg-surface' : 
          i === 1 ? 'border-[#ffd700] text-[#ffd700] bg-surface' : 
          'border-[#e10600] text-[#e10600] bg-surface'
        }`}>
          {c}
        </div>
        <span class="text-[10px] text-text-muted uppercase font-bold">{i === 0 ? 'Hard' : i === 1 ? 'Medium' : 'Soft'}</span>
      </div>
    ))}
  </div>
</div>