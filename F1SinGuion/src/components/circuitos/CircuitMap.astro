---
interface Props {
  gp: any;
}

const { gp } = Astro.props;
---

<div class="bg-surface/50 backdrop-blur-sm rounded-3xl border border-white/10 relative overflow-hidden group aspect-video flex items-center justify-center">
  {/* Grid Pattern Background */}
  <div class="absolute inset-0 opacity-10" 
       style="background-image: radial-gradient(circle at 1px 1px, white 1px, transparent 0); background-size: 24px 24px;">
  </div>

  {/* Glow Effect */}
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-3/4 h-3/4 bg-accent/10 blur-[60px] rounded-full group-hover:bg-accent/20 transition-colors duration-700"></div>
  
  {/* UI Overlays */}
  <div class="absolute top-6 left-6 flex items-center gap-2 z-20">
    <div class="w-1.5 h-1.5 rounded-full bg-red-500 animate-pulse shadow-[0_0_8px_rgba(239,68,68,0.6)]"></div>
    <span class="text-[10px] font-mono text-white/40 tracking-[0.2em] uppercase">Track Layout</span>
  </div>

  <div class="absolute bottom-6 right-6 text-right z-20">
    <div class="text-xs font-bold font-mono text-accent tracking-wider">{gp.pais ? gp.pais.toUpperCase() : 'GP'}</div>
  </div>

  {/* Map Image */}
  <div class="relative z-10 w-full h-full p-12 flex items-center justify-center">
    <img 
      transition:name={`map-${gp.id}`}
      src={gp.imagenCircuito || gp.imagen_circuito} 
      alt={`Mapa ${gp.nombre}`} 
      class="w-full h-full object-contain filter invert drop-shadow-[0_0_15px_rgba(6,182,212,0.4)] transition-all duration-700 group-hover:scale-105 group-hover:drop-shadow-[0_0_25px_rgba(6,182,212,0.6)]" 
    />
  </div>
</div>