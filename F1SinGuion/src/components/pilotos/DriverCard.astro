---
interface Props {
  driver: any;
}

const { driver } = Astro.props;
const { nombre, apellido, numero, pais, codigo } = driver;
---

<a href={`/pilotos/${driver.id}`} class="group relative bg-[#1e1e24] rounded-2xl overflow-hidden border border-white/5 hover:border-white/20 transition-all duration-300 hover:shadow-lg hover:-translate-y-2 flex flex-col h-full">
  {/* Barra decorativa superior */}
  <div class="h-1 w-full bg-gradient-to-r from-white/20 to-white/5 transform origin-left scale-x-0 group-hover:scale-x-100 transition-transform duration-500"></div>
  
  <div class="p-6 relative z-10 flex flex-col h-full justify-between">
    <div class="flex justify-between items-start mb-4">
      <div class="text-6xl font-black text-white/10 group-hover:text-white/20 transition-colors font-mono leading-none">
        {numero}
      </div>
      <div class="font-bold text-sm tracking-widest uppercase border border-white/10 px-2 py-1 rounded bg-white/5 text-gray-400">
        {codigo}
      </div>
    </div>
    
    <div>
      <span class="block text-sm font-medium text-gray-400 mb-0 uppercase tracking-wider">{nombre}</span>
      <h2 class="text-3xl font-black text-white uppercase italic leading-none group-hover:text-white transition-colors">
        {apellido}
      </h2>
      <p class="text-xs text-gray-500 mt-3 border-t border-white/5 pt-3 flex items-center gap-2">
        <span class="w-2 h-2 rounded-full bg-gray-600 group-hover:bg-white transition-colors"></span>
        {pais}
      </p>
    </div>
  </div>
</a>