---
import Layout from '@layouts/Layout.astro';
import Button from '@components/ui/Button.astro';
import { getTeamBySlug } from "@lib/services/teamsService";

// Habilitamos SSR
export const prerender = false;

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/404');
}

const team = await getTeamBySlug(id);

if (!team) {
  return Astro.redirect('/404');
}
---

<Layout title={`${team.nombre} - F1 2026`}>
  <div class="bg-bg min-h-screen text-white pt-20 px-4 sm:px-6 lg:px-8 relative overflow-hidden">
    
    {/* Fondo ambiental con el color del equipo */}
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-[500px] bg-purple-900/20 blur-[120px] rounded-[10px] pointer-events-none"></div>
    <div class="absolute bottom-0 right-0 w-[500px] h-[500px] bg-cyan-900/10 blur-[120px] rounded-[10px] pointer-events-none"></div>

    <div class="max-w-7xl mx-auto relative z-10">
        
        {/* Botón Volver */}
        <Button href="/escuderias" variant="ghost" class="mb-8 group">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 transform group-hover:-translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Teams
        </Button>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center mb-16">
            
            {/* Columna Info */}
            <div class="space-y-8">
                <div class="flex items-center gap-6">
                    <div class="bg-white/85 p-4 rounded-2xl backdrop-blur-md border border-white/10 shadow-2xl">
                        <img src={team.logo} alt={`Logo ${team.nombre}`} class="h-20 w-auto object-contain" />
                    </div>
                    <div>
                        <h1 class="text-6xl md:text-7xl font-black italic uppercase tracking-tighter leading-none mb-2">
                            {team.nombre}
                        </h1>
                        <p class="text-xl text-gray-400 font-medium border-l-4 pl-4" style={`border-color: ${team.colorVar}`}>{team.nombreCompleto}</p>
                    </div>
                </div>

                {/* Estadísticas Clave */}
                <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
                    <div class="bg-surface/50 p-3 rounded-xl border border-white/5 text-center hover:bg-white/5 transition-colors">
                        <span class="block text-2xl font-black text-white">{team.campeonatos || 0}</span>
                        <span class="text-[10px] uppercase tracking-wider text-gray-400">Titles</span>
                    </div>
                    <div class="bg-surface/50 p-3 rounded-xl border border-white/5 text-center hover:bg-white/5 transition-colors">
                        <span class="block text-2xl font-black text-white">{team.victorias || 0}</span>
                        <span class="text-[10px] uppercase tracking-wider text-gray-400">Wins</span>
                    </div>
                    <div class="bg-surface/50 p-3 rounded-xl border border-white/5 text-center hover:bg-white/5 transition-colors">
                        <span class="block text-2xl font-black text-white">{team.poles || 0}</span>
                        <span class="text-[10px] uppercase tracking-wider text-gray-400">Poles</span>
                    </div>
                    <div class="bg-surface/50 p-3 rounded-xl border border-white/5 text-center hover:bg-white/5 transition-colors">
                        <span class="block text-2xl font-black text-white">{team.vueltasRapidas || 0}</span>
                        <span class="text-[10px] uppercase tracking-wider text-gray-400">Fastest Laps</span>
                    </div>
                </div>

                <div class="grid grid-cols-2 gap-6">
                    <div class="bg-surface backdrop-blur-sm p-6 rounded-2xl border border-white/10 hover:border-white/20 transition-colors relative overflow-hidden group">
                        <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                        </div>
                        <h3 class="text-xs text-gray-500 uppercase font-bold tracking-widest mb-1">Base</h3>
                        <p class="text-lg font-bold text-white">{team.base}</p>
                    </div>
                    <div class="bg-surface backdrop-blur-sm p-6 rounded-2xl border border-white/10 hover:border-white/20 transition-colors relative overflow-hidden group">
                        <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" /></svg>
                        </div>
                        <h3 class="text-xs text-gray-500 uppercase font-bold tracking-widest mb-1">Team Principal</h3>
                        <p class="text-lg font-bold text-white">{team.jefe}</p>
                    </div>
                    
                    {team.directorTecnico && (
                        <div class="bg-surface backdrop-blur-sm p-6 rounded-2xl border border-white/10 hover:border-white/20 transition-colors relative overflow-hidden group">
                            <h3 class="text-xs text-gray-500 uppercase font-bold tracking-widest mb-1">Tech Director</h3>
                            <p class="text-lg font-bold text-white">{team.directorTecnico}</p>
                        </div>
                    )}
                    
                    {team.chasis && (
                        <div class="bg-surface backdrop-blur-sm p-6 rounded-2xl border border-white/10 hover:border-white/20 transition-colors relative overflow-hidden group">
                            <h3 class="text-xs text-gray-500 uppercase font-bold tracking-widest mb-1">Chassis</h3>
                            <p class="text-lg font-bold text-white">{team.chasis}</p>
                        </div>
                    )}

                    {team.motor && (
                        <div class="bg-surface backdrop-blur-sm p-6 rounded-2xl border border-white/10 hover:border-white/20 transition-colors relative overflow-hidden group">
                            <h3 class="text-xs text-gray-500 uppercase font-bold tracking-widest mb-1">Power Unit</h3>
                            <p class="text-lg font-bold text-white">{team.motor}</p>
                        </div>
                    )}

                    {team.primeraParticipacion && (
                        <div class="bg-surface backdrop-blur-sm p-6 rounded-2xl border border-white/10 hover:border-white/20 transition-colors relative overflow-hidden group">
                            <h3 class="text-xs text-gray-500 uppercase font-bold tracking-widest mb-1">First Entry</h3>
                            <p class="text-lg font-bold text-white">{team.primeraParticipacion}</p>
                        </div>
                    )}
                </div>

                {/* Reseña / Historia */}
                {team.reseña && (
                    <div class="bg-surface backdrop-blur-sm p-6 rounded-2xl border border-white/10">
                        <h3 class="text-lg font-bold italic uppercase mb-4 text-white">Team History</h3>
                        <p class="text-gray-400 leading-relaxed text-sm">{team.reseña}</p>
                    </div>
                )}

                {/* Pilotos */}
                <div>
                    <h3 class="text-2xl font-bold italic uppercase mb-6 flex items-center gap-2">
                        <span class="w-2 h-8 rounded-sm" style={`background-color: ${team.colorVar}`}></span>
                        Drivers 2026
                    </h3>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        {team.drivers && team.drivers.map((driver) => (
                            <div class="bg-surface backdrop-blur-sm p-4 rounded-xl border border-white/10 flex items-center justify-between group hover:border-white/20 transition-all hover:-translate-y-1 cursor-default">
                                <div class="flex items-center gap-3">
                                    <div class="w-10 h-10 rounded-[10px] bg-surface flex items-center justify-center text-gray-400 group-hover:text-white group-hover:bg-white/10 transition-colors">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>
                                    </div>
                                    <span class="font-bold text-lg">{driver.nombre} {driver.apellido}</span>
                                </div>
                            </div>
                        ))}
                    </div>
                </div>
            </div>

            {/* Columna Coche */}
            <div class="relative group mt-12 lg:mt-0">
                <div 
                    class="absolute inset-0 opacity-20 blur-[60px] rounded-[10px] transition-opacity duration-700 group-hover:opacity-30"
                    style={`background: radial-gradient(circle, ${team.colorVar}, transparent 60%);`}
                ></div>
                <img 
                    src={team.imagenCoche} 
                    alt={`Coche ${team.nombre}`} 
                    class="relative z-10 w-full h-auto object-contain drop-shadow-[0_20px_50px_rgba(0,0,0,0.5)] transform group-hover:scale-105 transition-transform duration-700"
                />
                
                {/* Stats placeholder (opcional) */}
                <div class="absolute -bottom-10 left-1/2 -translate-x-1/2 w-3/4 h-4 bg-black/20 blur-xl rounded-[100%]"></div>
            </div>

        </div>

    </div>
</Layout>